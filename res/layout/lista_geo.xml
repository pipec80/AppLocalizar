<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ID: "
        android:textColor="@drawable/list_item_text_selector"
        android:textStyle="bold"
        android:typeface="sans"
        android:padding="2dp"
        android:textSize="12sp" />
 
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:text="Lat: "
        android:textColor="@drawable/list_item_text_selector"
        android:textStyle="bold"
        android:typeface="sans"
        android:padding="2dp"
        android:textSize="12sp" />
 
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="Long: "
        android:textColor="@drawable/list_item_text_selector"
        android:textStyle="bold"
        android:typeface="sans"
        android:padding="2dp"
        android:textSize="12sp" />
 
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Fecha: "
        android:textColor="@drawable/list_item_text_selector"
        android:textStyle="bold"
        android:typeface="sans"
        android:padding="2dp"
        android:textSize="12sp" />
 
    <TextView
        android:id="@+id/tvw_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/tvw_lat"
        android:padding="2dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvw_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView4"
        android:padding="2dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvw_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/tvw_fecha"
        android:padding="2dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvw_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/tvw_long"
        android:padding="2dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:text="Ip:" 
        android:textColor="@drawable/list_item_text_selector"
        android:textStyle="bold"
        android:typeface="sans"
        android:padding="2dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tvw_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/tvw_fecha"
        android:padding="2dp"
        android:text="TextView" />
 
</RelativeLayout>